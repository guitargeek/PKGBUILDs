# Maintainer: Jonas Rembser <jonas.rembser@gmail.com>

pkgname=python-plottery
pkgver=0.0.1
pkgrel=1
arch=("i686" "x86_64")
url="https://github.com/aminnj/plottery"
makedepends=("git")
provides=("python-plottery")
source=("git+https://github.com/sgnoohc/plottery#branch=master")
sha512sums=('SKIP')

build() {

    echo 'from setuptools import setup, find_packages
setup(
    name="plottery",
    version="0.0.1",
    description="A ROOT plotter that makes you feel like a millionaire",
    long_description="A ROOT plotter that makes you feel like a millionaire",
    url="https://github.com/aminnj/plottery",
    packages=find_packages(),
    include_package_data=True,
    zip_safe=False,
    install_requires=[],
)' > setup.py
    python setup.py build
}

package() {
    python setup.py install --root="$pkgdir/" --optimize=1 --skip-build
}
